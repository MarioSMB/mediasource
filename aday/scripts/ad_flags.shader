// Additional textures and shaders by Mario

ad_flag_red_wavy
{
	qer_editorimage textures/ad_flags/ad_flag_red
	deformVertexes wave 50.0 sin 2 2 0.25 0.2
	{
		map textures/ad_flags/ad_flag_red
	}
	{
		map $lightmap
		blendfunc filter
	}
}

